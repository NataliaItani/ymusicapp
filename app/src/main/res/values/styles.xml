    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_launcher</item>
    </style>

    <style name="Toolbar.Title" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:colorAccent">@color/youtube_primary_color</item>
        <item name="android:colorControlActivated">@color/youtube_primary_color</item>
    </style>

    <!-- search -->
    <style name="SearchThemeLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/search_state_list</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="SearchThemeLayout2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/search_state_list</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="SearchThemeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="RatingBarTheme" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/dark</item>
        <item name="colorControlActivated">@color/youtube_primary_color</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppRatingBar">
        <item name="android:progressTint">@color/rate_active_color</item>
        <item name="android:backgroundTint">@color/rate_normal_color</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/youtube_primary_color</item>
    </style>

